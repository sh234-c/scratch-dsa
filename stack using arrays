// STACK USING ARRAYS
#include <stdio.h>
#include <stdlib.h>

struct stack{
    int size;
    int top;//topMostelement
    int * arr;
};//we define the structure
int isEmpty(struct stack*ptr){
    if(ptr->top==-1){
        return 1;
    }
    else{
        return 0;
    }
}
int isFull(struct stack*ptr){
    if(ptr->top==ptr->size-1){
        return 1;
    }
    else{
        return 0;
    }
}

int main(){
    struct stack* s = (struct stack*)malloc(sizeof(struct stack));
    s->size=80;
    s->top=-1;//as of now the stack is not full
    s->arr=(int *)malloc(s->size*sizeof(int));
    // s->arr[0]=7;
    // s->top++;
    
    if(isEmpty(s)){
        printf("the stack is empty");
    }
    else{
        printf("the stack is not empty");
    }
    return 0;
}
